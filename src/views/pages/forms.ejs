/* Estilo global */
body {
    font-family: 'Gotham';
    margin: 0 0 0 0;
    padding: 0 0 0 0;
    overflow: auto;
}

main {
    display: flex;
    flex-direction: column;
}

header {
    height: 130px;
    background-color: #280659;
    display: flex;
    align-items: center;
    padding-left: 40px;
    padding-right: 40px;
    font-size: 24px;
}

header nav {
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 100%;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
}

header nav a {
    display: flex;
    align-items: center;
    padding: 5px 15px;
    text-decoration: none;
    color: #FFF;
    gap: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 400;
    margin: 0 0 0 0;
}

header nav a:hover {
    background-color: #F54952;
    color: #FFF;
    border-radius: 8px;
}

header nav p {
    margin-block-start: 0;
    margin-block-end: 0;
    margin-bottom: 0;
}

