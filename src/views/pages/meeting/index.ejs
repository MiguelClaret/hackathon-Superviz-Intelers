<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meeting Options</title>
</head>
<body>
  <h1>Meeting Options</h1>

  <h2>Create a New Meeting</h2>
  <form action="/meeting/create" method="POST">
    <input type="hidden" name="userId" value="<%=user.id%>">
    <input type="hidden" name="userName" value="<%=user.firstName%>">
    <input type="hidden" name="groupId" value="<%=user.companyId%>">
    <input type="groupName" placeholder="Group name" name="groupName" value="Group One" required>
    <button type="submit">Create Meeting</button>
  </form>

  <h2>Join an Existing Meeting</h2>
  <ul>
    <% rooms.forEach(room => { %>
      <li>
        <%= room.name %> - <a href="/meeting/join/<%= room.id %>?userId=<%= user.id %>&userName=<%= user.firstName %>">Join Meeting</a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
