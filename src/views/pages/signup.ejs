<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
         @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-thin.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-thin.woff') format('woff'),
                 url('/fonts/gotham/gotham-thin.ttf') format('truetype');
            font-weight: 100; /* Thin */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-extralight.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-extralight.woff') format('woff'),
                 url('/fonts/gotham/gotham-extralight.ttf') format('truetype');
            font-weight: 200; /* ExtraLight */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-light.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-light.woff') format('woff'),
                 url('/fonts/gotham/gotham-light.ttf') format('truetype');
            font-weight: 300; /* Light */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-book.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-book.woff') format('woff'),
                 url('/fonts/gotham/gotham-book.ttf') format('truetype');
            font-weight: 400; /* Book */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-medium.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-medium.woff') format('woff'),
                 url('/fonts/gotham/gotham-medium.ttf') format('truetype');
            font-weight: 500; /* Medium */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-bold.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-bold.woff') format('woff'),
                 url('/fonts/gotham/gotham-bold.ttf') format('truetype');
            font-weight: 700; /* Bold */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-black.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-black.woff') format('woff'),
                 url('/fonts/gotham/gotham-black.ttf') format('truetype');
            font-weight: 900; /* Black */
            font-style: normal;
        }

        @font-face {
            font-family: 'Gotham';
            src: url('/fonts/gotham/gotham-ultra.woff2') format('woff2'),
                 url('/fonts/gotham/gotham-ultra.woff') format('woff'),
                 url('/fonts/gotham/gotham-ultra.ttf') format('truetype');
            font-weight: 950; /* Ultra */
            font-style: normal;
        }

        body {
            font-family: 'Gotham', sans-serif;
            background-color: #422680;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: auto;
            margin-top: 5vh;
            gap: 30vh;
        }

        .text-section {
            color: #F1F3F5;
            font-size: 2rem;
            width: 50%;
            margin-top: 5vh;

        }


        .text-section h1 {
            font-weight: 200;
            font-size: 50px;
            text-align: center;
        }

        .text-section h1 span {
            font-weight: 400;
            font-size: 50px;
        }

        .loginDeco {
            width: 100%;
            opacity: 0;
            animation: fadeInMove 3s ease-out forwards;
        }

        @keyframes fadeInMove {
            from {
                opacity: 0;
                transform: translateX(-60px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .form-container {
            background-color: #341671;
            padding: 20px;
            border-radius: 20px;
            width: 40vh;
            height: 100%;
            border: transparent;
            box-shadow: 10px 10px 5px rgba(40, 6, 89, 0.5);
            transition: transform 0.4s ease, box-shadow 0.4s ease;

        }

        .form-container:hover {
            box-shadow: 20px 20px 10px rgba(40, 6, 89, 0.5);
        }

        .formulario {
            transition: transform 0.4s ease;
            justify-content: center;
            font-family: 'Gotham';
        }

        .formulario:hover {
            transform: scale(1.03);
        }

        .formulario h2 {
            color: #F54952;
            font-size: 40px;
            font-weight: 500;
            background-color: #280659;
            margin: 0px;
            border-radius: 20px 20px 0px 0px;
            text-align: center;
            width: 24vh;
            height: 5vh;
            border: transparent;
            margin-left: 10vh;
        }

        .form-container form {
            display: flex;
            flex-direction: column;
            gap: 2vh;
            margin-top: 2vh;
            margin-left: 20px;
            margin-right: 20px;
        }

        .form-container input[type="text"],
        .form-container input[type="email"],
        .form-container input[type="password"] {
            padding: 15px;
            margin-top: 20px;
            border-radius: 10px;
            border: 3px solid transparent;
            transition: border-color 0.4s ease;
            background-color: #DEE2E6;

        }


        .form-container input:focus {
            outline: none;
            border-color: #F54952;
        }

        #confirm-password {
            margin-bottom: 2vh;
        }

        .form-container input[type="submit"] {
            background-color: #F54952;
            color: #F1F3F5;
            padding: 10px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            width: 50%;
            font-size: 24px;
            margin-top: 10px;
            margin-bottom: 20px; 
            margin-right: 0px;
            margin-left: 100px;
            font-weight: 700;
            transition: transform 0.3s ease;
        }

        .form-container input[type="submit"]:hover {
            transform: scale(1.05);
        }

        .form-container input::placeholder {
        color: #422680;
        }

        .form-container input {
            color:#422680;
        }

        .form-container label {
            color: #F54952;
            font-size: 32px;
            font-weight: 500;
            margin: 0
        }

        .form-container select {
            border-radius: 10px;
            padding: 15px;
            margin-top: 5px;
            margin-bottom: -55px;
            border: 3px solid transparent;
            transition: border-color 0.4s ease;
            background-color: #DEE2E6;
            color: #422680;
        }

        .form-container select:focus {
            outline: none;
            border-color: #F54952;
        }
        
        #registerForm div {
            color: #F1F3F5;
        }
        #registerForm div a{
            color: #F54952;
            text-decoration: none;
            font-weight: 700
        }
        #registerForm div a:hover{
            text-decoration: underline;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="text-section">
            <h1>Start <span>collaborating</span><br> with us</h1>
            <img src="/loginDeco.svg" alt="Illustration" class="loginDeco">
        </div>
        <div class="formulario">
            <h2>Sign up</h2>
            <div class="form-container">
                <form id="registerForm" action="/signup" method="POST">
                    <input type="text" id="firstName" name="firstName" placeholder="*Name" required>
                    <input type="text" id="lastName" name="lastName" placeholder="*Surname" required>
                    <input type="email" id="email" name="email" placeholder="*E-mail" required>
                    <input type="password" id="password" name="password" placeholder="*Password" required>
                    <input type="password" id="confirm-password" name="confirm-password" placeholder="*Confirm your password" required>
                    <input type="hidden" id="role" name="role" value="default">
                    <input type="hidden" id="userType" name="userType" value="employee">
                    <label for="companyId">Company:</label>
                    <select id="companyId" name="companyId" required>
                      <% companies.forEach(company => { %>
                        <option value="<%= company.id %>"><%= company.name %></option>
                      <% }); %>
                    </select><br>
                    <div>Already have an account? <a href="/login" target="_blank">Log in</a></div>
                    <input type="submit" class="login" value="Sign up">
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('registerForm').addEventListener('submit', function(event) {
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirm-password').value;
            if (password !== confirmPassword) {
                alert('Passwords do not match.');
                event.preventDefault();
            }
        });
    </script>
</body>
</html>
