</div>

<script>
    document.querySelectorAll('.faq-item').forEach(item => {
        item.addEventListener('click', () => {
            item.classList.toggle('active');
        });
    });
    document.addEventListener('DOMContentLoaded', () => {
        const searchBar = document.querySelector('.search-bar');
        const searchIcon = document.querySelector('.search-container img');
        const faqItems = document.querySelectorAll('.faq-item');

        function searchFAQs() {
            const query = searchBar.value.toLowerCase();
            faqItems.forEach(item => {
                const text = item.textContent.toLowerCase(); // Pega todo o texto do item
                item.style.display = text.includes(query) ? 'block' : 'none'; // Mostra/esconde baseado na query
            });
        }

        [searchBar, searchIcon].forEach(el => {
            el.addEventListener('keyup', (event) => {
                if (event.key === 'Enter') {
                    searchFAQs();
                }
            });
            el.addEventListener('click', () => {
                searchFAQs();
            });
        });
    });
    </script>
</script>

