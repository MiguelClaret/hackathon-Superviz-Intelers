.textoform{
        display: inline-block;
        width: 405px;
        margin: 0; /* Remove margens para alinhamento adequado */
        text-align: center; /* Centraliza o texto */
        font-weight: 600; /* Mantém a consistência do peso da fonte */
        margin-top: 30px; /* Margem de cima */
        margin-left: 0px; /* Margem esquerda */
        color: #660F56;
        font-size: 2rem;
}

.documents-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 70px;
    margin-top: 50px;
    margin-right: 100px;
    margin-left: 95px;
}

.document-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #FF5252;
    width: 150px;
    height: 170px;
    border-radius: 30px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
    color: black;
    font-size: 14px;
    text-align: center;
}

.mais-icone {
    margin-top: 60px;
    width: 50%; /* Mantém a proporção da imagem */
    height: auto; /* Mantém a proporção da imagem */
}

.document-item p {
    margin: 185px 0 0 0; /* Ajusta a margem do texto abaixo do ícone */
    color: rgb(0, 0, 0); /* Se preferir o texto em branco */
}

#adiciona {
    margin: 70px 0 0 0; /* Ajusta a margem do texto abaixo do ícone */
    color: #000000;
}

html, body {
    margin: 0;
    padding: 0;
    width: 100%; /* Garante que a largura do body ocupe 100% da tela */
    height: 100%; /* Garante que a altura do body ocupe 100% da tela */
}

main {
    padding: 10px; /* Padding opcional ao redor do conteúdo principal */
}

.documents-container {
    margin-bottom: 20px; /* Espaço entre a lista de documentos e o botão */
}

.options {
    margin-top: 20px; /* Espaço acima do botão */
    text-align: center; /* Centraliza o botão */
}

.proprietario {
    display: inline-block; /* Faz o botão ocupar apenas o espaço necessário */
    padding: 10px 20px; /* Padding interno do botão */
    font-size: 16px; /* Tamanho da fonte */
}






.dropbtn {
    background-color: #ffffff; /*fundo do botão*/
    color: #660F56;
    font-family: 'Gotham';
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}

.dropbtn:hover {
    background-color: #ddd;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content a {
    color: #660F56;
    font-family: 'Gotham';
    font-size: 16px;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {
    background-color: #f1f1f1;
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown:hover .dropbtn {
    background-color: #ddd;
}


.visualization {
    color: #660F56;
    font-family: 'Gotham';
